@model List<IPlayer>

 <h1>All-Star Team</h1>
    <p>For the time period @SearchInfo.StartYear to @SearchInfo.EndYear here is a roster of the top 12 pitchers and 13 position players @SearchInfo.Display:</p>
    <h3><u>Rotation:</u></h3>
        <table class="table">
            <tr>
                <th>Pos</th>
                <th>Name</th>
                <th>WAR</th>
                <th>ERA</th>
                <th>WHIP</th>
                <th>W</th>
                <th>SV</th>
                <th>K</th>
                <th>IP</th>
            </tr>
            @foreach (var pitcher in Model)
            {
                @if (pitcher.Role == "rotation")
                {
                    <tr>
                        <td>@pitcher.Position</td>
                        <td>@pitcher.Name</td>
                        <td>0.0</td>
                        <td>0.00</td>
                        <td>0.00</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                }
                
            }
        </table>
        <h3><u>Bullpen:</u></h3>
        <table class="table">
            <tr>
                <th>Pos</th>
                <th>Name</th>
                <th>WAR</th>
                <th>ERA</th>
                <th>WHIP</th>
                <th>W</th>
                <th>SV</th>
                <th>K</th>
                <th>IP</th>
            </tr>
            @foreach (var pitcher in Model)
            {
                @if (pitcher.Role == "bullpen")
                {
                    <tr>
                        <td>@pitcher.Position</td>
                        <td>@pitcher.Name</td>
                        <td>0.0</td>
                        <td>0.00</td>
                        <td>0.00</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                    </tr>
                }
                
            }
        </table>
    <h3><u>Starters:</u></h3>
            <table class="table">
            <tr>
                <th>Pos</th>
                <th>Name</th>
                <th>WAR</th>
                <th>AVG</th>
                <th>OBP</th>
                <th>SLG</th>
                <th>R</th>
                <th>H</th>
                <th>HR</th>
                <th>SB</th>
                <th>defWAR</th>
                <th>PA</th>
            </tr>
            @foreach (var batter in Model)
            {
                @if (batter.Role == "starter")
                {
                    <tr>
                        <td>@batter.Position</td>
                        <td>@batter.Name</td>
                        <td>0.0</td>
                        <td>.000</td>
                        <td>.000</td>
                        <td>.000</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0.0</td>
                        <td>0</td>
                    </tr>
                }
                
            }
        </table>
        <h3><u>Reserves:</u></h3>
            <table class="table">
            <tr>
                <th>Pos</th>
                <th>Name</th>
                <th>WAR</th>
                <th>AVG</th>
                <th>OBP</th>
                <th>SLG</th>
                <th>R</th>
                <th>H</th>
                <th>HR</th>
                <th>SB</th>
                <th>defWAR</th>
                <th>PA</th>
            </tr>
            @foreach (var batter in Model)
            {
                @if (batter.Role == "reserve")
                {
                    <tr>
                        <td>@batter.Position</td>
                        <td>@batter.Name</td>
                        <td>0.0</td>
                        <td>.000</td>
                        <td>.000</td>
                        <td>.000</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0</td>
                        <td>0.0</td>
                        <td>0</td>
                    </tr>
                }
                
            }
        </table>
    <h3><u>Honorable Mentions:</u></h3>
    <table class="table">
            <tr>
                <th>Pos</th>
                <th>Name</th>
                <th>WAR</th>
            </tr>
            @foreach (var player in Model)
            {
                @if (player.Role == "mention")
                {
                   <tr>
                    <td>@player.Position</td>
                    <td>@player.Name</td>
                    <td>0.0</td>
                </tr>
                }
                
            }
        </table>
